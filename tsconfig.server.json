{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist/server",
    "noEmit": false,
    "jsx": "react",
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "declaration": true,
    "composite": true
  },
  "include": [
    "src/server/**/*",
    "src/config/**/*"
  ],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
